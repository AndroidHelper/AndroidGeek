<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clockBackgroundPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/load_fail"
        android:textColor="?attr/clockTextColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/error_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_title"
        android:gravity="center"
        android:lineSpacingExtra="5.5dp"
        android:text="@string/please_retry"
        android:textColor="?attr/clockTextColorSecond" />

</RelativeLayout>